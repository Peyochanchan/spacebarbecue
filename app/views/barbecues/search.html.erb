<div class="container mt-3">
  <h1>Your <%= @barbecues.length <= 1 ? "result" : "#{@barbecues.length} results" %> out of our <%= @total %> barbecues</h1>
  <p>You searched <strong><%= @request %></strong></p>
</div>
<div class="col-12">
  <div class="row">
    <% @barbecues.each do |b| %>
    <div class="col-3 bg-light m-1">
      <div class="flat-card">
        <div class="img">
          <%= cl_image_tag b.photo.key, style: "width: 100%; object-fit: cover;" %>
        </div>
        <div class="title">
          <h2> <%= b.title %> </h2>
        </div>
        <div class="address">
          <h5><%= b.address %></h5>
        </div>
        <div class="d-flex justify-content-around align-items-end">
          <div class="price">
            <i class="fas fa-user-friends"></i>
            <%= b.price %>
          </div>
          <div class="guests">
            <i class="fas fa-euro-sign"></i>
            <%= b.description %>
          </div>
        </div>
      </div>
      <div class="card-body col border border-light">
        <%= link_to 'Show', barbecue_path(b), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
