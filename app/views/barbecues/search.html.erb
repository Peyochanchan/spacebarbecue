<div class="container mt-3">
  <h1>Your <%= @barbecues.length <= 1 ? "result" : "#{@barbecues.length} results" %> out of our <%= @total %> barbecues</h1>
  <p>You searched <strong><%= @request %></strong></p>
</div>
<div class="container">
  <div class="row">
    <% @barbecues.each do |b| %>
    <div class="card-my-reservations border border-info">
      <div class="bloc-image">
        <%= cl_image_tag b.photo.key, style: "width: 100%; height: 100%; object-fit: center;" %>
      </div>
      <div class="card-left">
        <h2> <%= b.title %> </h2>
        <h5><%= b.address %></h5>
        <%= b.description %>
      </div>
      <div class="card-right py-3">
        <div class="price">
          <i class="fas fa-euro-sign"></i>
          <%= b.price %>
        </div>
        <div class="button">
          <%= link_to 'Show', barbecue_path(b), class: "btn btn-outline-warning" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
