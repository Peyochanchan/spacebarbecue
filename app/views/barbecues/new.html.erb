<h1><%= @barbecue.name %></h1>
<%= link_to "Back to all barbecues", root_path %>
<div class="row">
  <div class="col-sm-12 col-md-6">
    <h3>Barbecue space</h3>
    <table class="table table-bordered"><tbody>
      <thead>
        <th>Ingredient</th>
        <th>Description</th>
        <th>Price</th>
      </thead>
      <% @barbecues.each do |barbecue| %>
      <tr>
        <td><%= barbecue.name %></td>
        <td><%= barbecue.description %></td>
        <td>
          <%= link_to barbecue_path(barbecue), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_barbecue"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-sm-12 col-md-6">
  <%= render "barbecues/new", title: @barbecue, description: @description, price:@price %>
</div>
</div>
