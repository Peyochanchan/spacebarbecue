<div class="container">
  <div class="d-flex row justify-content-center">
    <%= cl_image_tag("Space_barbecue_ltj71e") %>
  </div>
  <div class="row justify-content-center d-block">
    <% if @barbecues == [] %>
    <div class="text-center">
      <h1>You don't have any barbecue yet !</h1>
      <div class="justify-content-center">
        <%= link_to 'Create', new_barbecue_path(), id: "book-link", class: "btn btn-success" %>
      </div>
    </div>
    <% else %>
    <% @barbecues.each do |barbeuk| %>
    <div class="card-my-reservations border border-info">
      <div class="bloc-image">
        <%= cl_image_tag barbeuk.photo.key, style: "width: 100%; height: 100%; object-fit: cover;" %>
      </div>
      <div class="card-left">
        <h5><%= barbeuk.title %></h5>
        <p><%= barbeuk.description %></p>
        <p><%= barbeuk.price %> â‚¬ / day</p>
        <div class="row justify-space-between mx-3">
          <div class="m-3">
            <p class="text-decoration-none"><%= link_to 'Edit', edit_barbecue_path(barbeuk), id: "edit-link", class: "btn btn-warning" %></p>
          </div>
          <div class="m-3">
            <p class="text-decoration-none"><%= link_to 'Delete', barbecue_path(barbeuk), method: :delete, id: "delete-link", class: "btn btn-warning" %></p>
          </div>
        </div>
      </div>
      <div class="card-right">
        <% if barbeuk.locations.where(status: "pending").any? %>
        <% barbeuk.locations.each do |loc| %>
        <div class="d-block col-10 offset-2 justify-content-center border border-info">
          <p> <%= loc.user.first_name %> <%= loc.user.last_name %> would like to rent your barbecue: </p>
        </div>
        <div class="btn justify-content-center">
          <p class="text-decoration-none"><%= link_to 'Options', location_path(id: loc.id, barbecue_id: barbeuk.id), class: "btn btn-warning justify-content-center" %></p>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<% end %>
</div>
</div>
