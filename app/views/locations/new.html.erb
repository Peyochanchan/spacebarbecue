<h1>Pour quand voulez-vous réserver ce Barbecue ?</h1>
<br>
<br>
<div class="container d-flex">
  <div class="card-body col-6 border border-light shadow bg-body rounded" style="width: 18rem;">
    <p class="text-center">
      <%= cl_image_tag("#{@barbecue.photo.key}", style: "width: 100%; object-fit: cover;") %>
    </p>
    <h2 class="card-title"><%= @barbecue.title %></h2>
    <p class="card-text"><%= @barbecue.description %></p>
    <p class="card-text"><%= @barbecue.price %> € / day</p>
      <div class="card bg-light m-2 p-2">
        <div class="flat-card">
          <div class="input-group input-group-md p-1">
            <span class="input-group-text" id="inputGroup-sizing-md">From</span>
            <input type="text" class="form-control" name="start_time" placeholder="MM/DD/YYYY">
          </div>
          <div class="input-group input-group-md p-1">
            <span class="input-group-text" id="inputGroup-sizing-md">To</span>
            <input type="text" class="form-control" name="end_time" placeholder="MM/DD/YYYY">
          </div>
          <div class="d-flex justify-content-center">
            <button id="sweet-alert" type="button" class="btn btn-success">Book Now !</button>
            <%= link_to "Johnny", barbecue_locations_path(@barbecue), method: :post, id: "delete"%>
          </div>
        </div>
      </div>
  </div>
    <div class="container col-6 d-block">
      <div class="card-body border border-light shadow bg-body rounded mb-2">
        <h1><u>Owner:</u></h1>
        <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <h1> <%= "#{@barbecue.user.first_name} #{@barbecue.user.last_name}"%> </h1>
      </div>
      <div class="card-body border border-light justify-content-center shadow bg-body rounded">
        <%= month_calendar do |date| %>
        <%= date.day %>
        <% end %>
      </div>
    </div>
</div>
